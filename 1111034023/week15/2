// ConsoleApplication4.cpp : 此檔案包含 'main' 函式。程式會於該處開始執行及結束執行。
//

#include <stdio.h>

int plus(int a,int b)
{
    return a + b;
}
int mine(int a, int b)
{
    return a - b;
}
int multiplication(int a, int b)
{
    return a * b;

}
int division(int a, int b)
{
    return a / b;
}


int main()
{
    int f, s;
    int size = 4;
    int i = 0;
    int (*f[4])(int ,int ) = {plus,mine,multiplication,division};




    puts("叫你輸入數字你就輸入數字");
    scanf("%d", &f);
    puts("叫你輸入第二個數字你就輸入第二個數字");
    scanf("%d", &s);
    puts("1.加");
    puts("2.減");
    puts("3.乘");
    puts("4.除");
    int choice = 0;
    scanf("%d", &choice);
    while (choice >= 1 && choice < 4)
    {
        (*f[choice](f, s));
    }
}

// 執行程式: Ctrl + F5 或 [偵錯] > [啟動但不偵錯] 功能表
// 偵錯程式: F5 或 [偵錯] > [啟動偵錯] 功能表

